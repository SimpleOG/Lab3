#include <iostream>
#include <clocale>
#include <cmath>
using namespace std;

int main()

{setlocale(LC_ALL, "RUS");


int k,n,ki,ni,a,s;
s=0;
cout<<"Введите количество наборов"<<endl;
cin>>k;
cout<<"Введите количество элементов в наборе"<<endl;
cin>>n;
for(ki=1;ki<k+1;ki++){
        for(ni=1;ni<n+1;ni++){
    cout<<"Введите "<<ni<<" число из "<<ki<<" набора"<<endl;
    cin>>a;
    s=s+a;}
}
if(k>1)
cout<<"Cумма элементов в "<<ki<<" наборах равна :"<<s;
else
cout<<"Cумма элементов в одном наборe равна :"<<s;


return 0;

}
